<% @feeds.each do |feed| %>
  <div class="content row">
    <p class="alert alert-info col-xs-12"><%= "#{feed.user.name}さんの投稿" %></p>
    <p class="content_text col-xs-12"><%= feed.content %></p>
    <div class=image_area><%= image_tag feed.image.url %></div>
    <ul class="row">
      <li class="col-xs-1"><%= link_to 'Show', feed %></li>
      <li class="col-xs-1"><%= link_to 'Edit', edit_feed_path(feed) %></li>
      <li class="col-xs-1"><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
  </div>
<% end %>
